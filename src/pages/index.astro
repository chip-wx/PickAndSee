---
import LayoutH from "../layout/layoutH.astro";
---

<LayoutH title="Home">
	<div class="container">
		<h1>Choose View</h1>
		<div class="options">
			<a href="/PickAndSee/landing" class="option">
			<img src="/PickAndSee/landingPic.PNG" alt="" class="img">
			<h2>Landing View</h2>
			</a>
			<a href="/PickAndSee/texts" class="option">
			<img src="/PickAndSee/textsPic.PNG" alt="Try Textos" class="img">
			<h2>Try Text</h2>
			</a>
		</div>
	</div>
</LayoutH>

<style>
	.container{
		width: 100%;
		height: 100vh;
		background-color: #000c;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		gap: 50px;
	}

	h1{
		color: #fff;
		font-weight: bold;
		font-size: 5rem;
	}

	.options{
		display: flex;
		align-items: center;
		justify-content: center;
		flex-wrap: wrap;
		gap: 50px;
	}
	
	.options > .option{
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		gap: 30px;
		width: 400px;
		height: 400px;
		text-decoration: none;
		color: #fff;
		transition: .4s ease-in-out;
	}

	.options > .option:hover{
		scale: 1.1;
	}
	
	a > .img{
		box-shadow: 0 0 100px 5px #fff;
		width: 300px;
		height: 300px;
		background-color: #000;
		border: 3px solid #fff;
		border-radius: 20px;
	}

</style>

